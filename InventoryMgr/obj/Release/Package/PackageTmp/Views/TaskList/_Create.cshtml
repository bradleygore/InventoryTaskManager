@model InventoryMgr.Models.TaskList

@using (Html.BeginForm("", "api/TaskLists", FormMethod.Post, new { id = "frmCreateTaskList", @data_bind = "submit: createTaskList" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TaskList</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TaskName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskName)
            @Html.ValidationMessageFor(model => model.TaskName)
        </div>

        <input type="hidden" id="UserId" name="UserId" value="@ViewBag.UserId" />
        <input type="hidden" id="IsComplete" name="IsComplete" value="false" />

        <p>
            <input type="submit" value="Create" />
            <input type="button" value="Cancel" id="btnCancelCreateTaskList" />
        </p>
    </fieldset>
}