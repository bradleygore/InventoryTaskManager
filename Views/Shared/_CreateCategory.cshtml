@model InventoryMgr.Models.InventoryCategory

<h2>Add New Inventory Category</h2>
@using (Html.BeginForm("", "api/Category", FormMethod.Post, new { id = "frmCreateCategory", @data_bind = "submit: createCategory" })) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>InventoryCategory</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryDescription)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryDescription)
            @Html.ValidationMessageFor(model => model.CategoryDescription)
        </div>

        <input type="hidden" id="UserId" name="UserId" value="@ViewBag.UserId" />
        <input type="hidden" id="IsGlobal" name="IsGlobal" value="false" />

        <p>
            <input type="submit" value="Create" />
            <input type="button" value="Cancel" id="btnCancelCategoryCreate" />
        </p>
    </fieldset>
}
